@require '../../../styles/global.styl';

.display-table {
  text-transform: capitalize;
  col(3/4);
  thead {
    color: $text-emphasis-color;
    font-weight: 500;
    text-transform: uppercase;
    td {
      word-spacing: normal;
    }
  }
  td {
    col(1/3);
    word-spacing: 500px;
    padding-bottom: 15px;
  }
}

@media only screen and (max-device-width: $max-tablet) {
  .display-table {
    col(1);
  }
}