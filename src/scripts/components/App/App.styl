@require '../../../styles/global.styl';

.app {
  h1,
  h3 {
     text-align: center;
  }
  h1 {
    font-size: 2em;
  }
  h3 {
    font-size: 1.3em;
  }
  header, footer {
    align-items: center;
    background: $emphasis-color;
    color: white;
    display: flex;
    flex-flow: row nowrap;
    height: 50px;
  }
  header {
    color: $cta-color;
    font-size: 1.5em;
  }
  .content-container {
    min-height: 100vh;
    text-align: center;
  }
}