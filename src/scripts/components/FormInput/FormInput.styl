@require '../../../styles/global.styl';

.form-input {
  border: 1px solid $light-gray;
  font-size: 1em;
  height: 50px;
  padding: 0 5px;
  col(1/3, cycle: 3, gutter: 1);
  &.inputError {
    border: 1px solid $error-color;
  }
}

@media only screen and (max-width: $max-tablet) {
  .form-input {
    col(1);
    input {
      margin-bottom: 10px;
      col(1);
    }
  }
}