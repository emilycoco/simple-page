@require '../../../styles/global.styl';

.add-member-form {
  col(3/4);
  .input-container {
    cf(both);
  }
  input {
    border: 1px solid $light-gray;
    height: 50px;
    padding: 0 5px;
    col(1/3, cycle: 3, gutter: 1);
  }
}

@media only screen and (max-device-width: $max-tablet) {
  .add-member-form {
    col(1);
    input {
      margin-bottom: 10px;
      col(1);
    }
  }
}